{
  "extends": "./datastar/library/tsconfig.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "rootDir": ".",
    "outDir": "dist",
    "paths": {
      "@engine": ["./datastar/library/src/engine/engine.ts"],
      "@engine/*": ["./datastar/library/src/engine/*"],
      "@plugins/*": ["./datastar/library/src/plugins/*"],
      "@utils/*": ["./datastar/library/src/utils/*"]
    }
  },
  "include": [
    "ephemeral.ts",
    "datastar/library/src/**/*.ts"
  ]
}
